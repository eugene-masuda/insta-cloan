<div class="modal fade" id="micropostModal" tabindex="-1" role="dialog" aria-labelledby="micropostModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="micropostModalLabel">投稿内容</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class ="row">
          <div class = "col-md-4">
            <%= image_tag (micropost.display_image) %>
          </div>
          <div class = "comments">
            <div class = "col-md-6 col-md-offset-1">
              <% micropost.comments.each do |comment| %>
                <div class = "comment-block">
                  <div class = "text", style="white-space:pre-wrap"><%= comment.comment%></div>
                  <div class = "comment-info">
                    User_name: <%= User.find(comment.user.id).user_name %>, 
                    <%= time_ago_in_words(comment.created_at)%>
                    <% if comment.user.id == current_user.id %>
                      <%= link_to "削除", comment, method: :delete %>
                    <% end %>
                  </div>
                </div>
              <% end %> 
            </div>
          </div>    
        </div>
      </div>
    </div>
  </div>
</div>     
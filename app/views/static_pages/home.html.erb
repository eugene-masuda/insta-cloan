<% provide(:title, "Home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-xs-4">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to the Instagram</h1>

  <h2>
    This is the home page for the
    Instagram
    sample application.
  </h2>
  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  <%= link_to "Log in!", login_path, class: "btn btn-lg btn-success" %>
</div>
  <h2>
    Login with
  </h2>
  <h2 class="fb-link">
    
    <%= link_to "Facebook ", '/users/auth/facebook', class: "btn btn-lg btn-primary" %>
  </h2>
<% end %>